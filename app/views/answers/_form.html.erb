<h1><%= answer_header(@answer) %></h1>

<p>
  <%= @answer.question.body %>
</p>

<%= form_with  model: [@question, @answer], local: true do |form| %>
  <p>
    <%= form.label :body %>
    <%= form.text_area :body, id: :answer_body, rows: 7, cols: 60 %>
  </p>

  <p>
    <%= form.label :correct %>
    <%= form.check_box :correct, id: :answer_correct %>
  </p>

  <p><%= form.submit %></p>
<% end %>

<%= link_to 'Back', question_path(@answer.question) %>
