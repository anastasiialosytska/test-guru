<% flash.each do |key, message| %>
  <% if key == 'notice' %>
    <%= content_tag :p, message, class: 'alert alert-primary' %>
  <% elsif key == 'alert' %>
    <%= content_tag :p, message, class: 'alert alert-danger' %>
  <% elsif key == 'success' %>
    <%= content_tag :p, message.html_safe, class: 'alert alert-success' %>
  <% end %>
<% end %>
