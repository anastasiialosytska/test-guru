<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

<nav class="navbar navbar-light bg-light">
  <% if user_signed_in? %>
    <span class="navbar-brand">
      <% if current_user.admin? %>
        <button class="btn btn-outline-primary"><i class="bi bi-house-door"></i> <%= link_to 'TestGuru', root_path %></button> |
        <button class="btn btn-outline-primary"><i class="bi bi-pencil"></i> <%= link_to t('.admin_panel'), admin_tests_path %></button>
      <% else %>
        <button class="btn btn-outline-primary"><i class="bi bi-house-door"></i> <%= link_to 'TestGuru', root_path %></button>
      <% end %>
    </span>
    <span class="navbar-text">
      <%= t('.welcome', email: current_user.email) %> |
      <%= link_to t('.logout'), destroy_user_session_path, method: :delete %>
    </span>
  <% else %>
    <span class="navbar-brand">
      TestGuru
    </span>
    <span class="navbar-text">
      <%= link_to t('.login'), new_session_path(resource_name) %> |
      <%= link_to t('.signup'), new_registration_path(resource_name) %>
    </span>
  <% end %>
</nav>


