<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

<nav class="navbar navbar-light bg-light">
  <% if user_signed_in? %>
    <span class="navbar-brand">
      <%= link_to root_path, class: "btn btn-outline-primary" do %>
        <i class="bi bi-house-door"></i> TestGuru
      <% end %>
      <% unless current_user.admin? %>
        <%= link_to badges_path, class: "btn btn-outline-primary" do %>
          <i class="bi bi bi-award"></i><%= t('.awards') %>
        <% end %> 
      <% end %>
      <% if current_user.admin? %>
        <%= link_to admin_tests_path, class: "btn btn-outline-primary" do %>
          <i class="bi bi-pencil"></i><%= t('.admin_panel') %>
        <% end %>
        <%= link_to admin_badges_path, class: "btn btn-outline-primary" do %>
          <i class="bi bi bi-award"></i><%= t('.awards_management') %>
        <% end %>
      <% end %>
    </span>

    <span class="navbar-text">
      <%= t('.welcome', email: current_user.email) %> |
      <%= link_to t('.logout'), destroy_user_session_path, method: :delete %>
    </span>
  <% else %>
    <span class="navbar-brand">
      TestGuru
    </span>

    <span class="navbar-text">
      <%= link_to t('.login'), new_session_path(resource_name) %> |
      <%= link_to t('.signup'), new_registration_path(resource_name) %>
    </span>
  <% end %>
</nav>
