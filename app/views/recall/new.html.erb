<h2 class="mt-3 text-center border border-primary rounded-pill"><%= t('.recall') %></h2>

<div class="row justify-content-center mt-3">
  <div class="col col-lg-5">
    <div class="card border-secondary">
      <div class="card-body">
        <%= form_with url: "/recall", method: :post do |form| %>
          <div class="form-group">
            <p>
              <%= form.label "Enter text:" %><br>
              <%= form.text_area :message, size: "70x5", class: 'form-control' %>
            </p>
            <p><%= form.submit class: 'btn btn-primary mt-2' %></p>
          </div>
        <% end %>
        <p><%= link_to t('.back'), root_path, class: 'btn btn-outline-secondary mt-3' %></p>
      </div>
    </div>
  </div>
</div>
