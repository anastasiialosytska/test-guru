<div class="row justify-content-center mt-3">
  <div class="col col-lg-5">
    <div class="card border-secondary">
      <div class="card-body">
        <%= form_with model: [:admin, @test], local: true do |form| %>
          <div class="form-group">
            <p>
              <%= form.label :title %><br>
              <%= form.text_field :title, id: :test_title, class: 'form-control' %>
            </p>

            <p>
              <%= form.label :level %><br>
              <%= form.number_field :level, id: :test_level, class: 'form-control' %>
            </p>

            <p>
              <%= form.label :category_id %>:
              <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true, class: 'form-control' %>
            </p>

            <p>
              <%= form.label :timer %>
              <%= form.number_field :timer, id: :test_timer, min: 0, max: 60, step: 5, class: 'form-control' %>
            </p>

            <p>
              <%= form.label :is_ready, class: 'form-check-label' do %>
              <%= form.check_box :is_ready, class: 'form-check-input' %>
              <%= t('.is_ready') %>
              <% end %> 
            </p>

            <p class="text-center"><%= form.submit class: 'btn btn-primary mt-2' %></p>
          </div>
        <% end %>
        <p><%= link_to t('.back'), admin_tests_path, class: 'btn btn-outline-secondary mt-3' %></p>
      </div>
    </div>
  </div>
</div>
