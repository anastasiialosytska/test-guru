<div class="container mt-3 mb-4">
  <h3>
    <strong><%= t('.title') %></strong>
    <%= @test.title %>
  </h3>

  <h3>
    <strong><%= t('.level') %></strong>
    <%= @test.level %>
  </h3>
</div>

<h4><%= t('.questions') %></h4>

<table class="table">
  <tr>
    <td colspan="3"></td>
  </tr>
  <% @questions.each do |question| %>
  <tr>
    <td><%= question.body %></td>
    <td>
      <%= link_to admin_question_path(question) do %>
        <i class="bi bi-eye"></i>
      <% end %>
    </td>
    <td>
      <%= link_to edit_admin_question_path(question) do %>
        <i class="bi bi-pencil"></i>
      <% end %>
    </td>
    <td>
      <%= link_to admin_question_path(question),
                  method: :delete,
                  data: { confirm: t('.confirm') } do %>
        <i class="bi bi-trash"></i>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>

<p><%= link_to t('.add_question'), new_admin_test_question_path(@test), type: "button", class: "btn btn-outline-secondary" %></p>

<p><%= link_to t('.back'), admin_tests_path, type: "button", class: "btn btn-outline-secondary mt-3" %></p>
