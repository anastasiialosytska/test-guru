<p>
  <strong>Title:</strong>
  <%= @test.title %>
</p>

<p>
  <strong>Level:</strong>
  <%= @test.level %>
</p>

<h2>Questions:</h2>

<p><%= link_to 'Add question', new_admin_test_question_path(@test) %></p>

<table>
  <tr>
    <td colspan="3"></td>
  </tr>
  <% @questions.each do |question| %>
  <tr>
    <td><%= question.body %></td>
    <td><%= link_to 'Show', admin_question_path(question) %></td>
    <td><%= link_to 'Edit', edit_admin_question_path(question) %></td>
    <td>
      <%= link_to 'Delete',
                  admin_question_path(question),
                  method: :delete,
                  data: { confirm: 'Are you sure?' }  %>
    </td>
  </tr>
  <% end %>
</table>

<p><%= link_to 'Back', admin_tests_path %></p>
