<h1>Tests</h1>

<p>
  <%= link_to 'New test', new_admin_test_path %>
</p>

<table>
  <tr>
    <td>Title</td>
    <td>Level</td>
    <td>Quantity of questions</td>
    <td colspan="3">Actions</td>
  </tr>

  <% @tests.each do |test| %>
    <tr>
      <td><%= test.title %></td>
      <td><%= test.level %></td>
      <td><%= test.questions.count %></td>
      <td><%= link_to 'Show', admin_test_path(test) %></td>
      <td><%= link_to 'Edit', edit_admin_test_path(test) %></td>
      <td>
        <%= link_to 'Delete',
                    admin_test_path(test),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>
