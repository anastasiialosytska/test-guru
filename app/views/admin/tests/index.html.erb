<h1><%= t('.header') %></h1>

<p>
  <%= link_to t('.new_test'), new_admin_test_path %>
</p>

<table>
  <tr>
    <td><%= t('.title') %></td>
    <td><%= t('.level') %></td>
    <td><%= t('.quantity_of_questions') %></td>
    <td colspan="3"><%= t('.action') %></td>
  </tr>

  <% @tests.each do |test| %>
    <tr>
      <td><%= test.title %></td>
      <td><%= test.level %></td>
      <td><%= test.questions.count %></td>
      <td><%= link_to t('.show'), admin_test_path(test) %></td>
      <td><%= link_to t('.edit'), edit_admin_test_path(test) %></td>
      <td>
        <%= link_to t('.delete'),
                    admin_test_path(test),
                    method: :delete,
                    data: { confirm: t('.confirm') } %>
      </td>
    </tr>
  <% end %>
</table>
