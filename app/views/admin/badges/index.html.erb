<h2 class="mt-3 text-center border border-primary rounded-pill"><%= t('.title') %></h2>

<p>
  <%= link_to t('.new_badge'), new_admin_badge_path, type: 'button', class: "btn btn-outline-secondary mt-3" %>
</p>

<div class="container mt-5">
  <table class="table table-hover caption-top">
    <caption><%= t('.all_awards') %></caption>
    <% @badges.each do |badge| %>
      <tr>
        <td valign="middle"><%= badge.title %></td>
        <td valign="middle"><%= badge.description %></td>
        <td><%= image_tag(badge.icon, size: "100x100") %></td>
        <td valign="middle">
            <%= link_to t('.edit'), 
                        edit_admin_badge_path(badge),
                        type: "button",
                        class: "btn btn-outline-secondary" %>
          </td>
          <td valign="middle">
            <%= link_to t('.delete'),
                        admin_badge_path(badge),
                        method: :delete,
                        data: { confirm: t('.confirm') },
                        type: "button", class: "btn btn-outline-secondary" %>
          </td>
        
      </tr>
    <% end %>
  </table>
</div>

<p>
  <%= link_to t('.back'), admin_tests_path, type: 'button', class: "btn btn-outline-secondary mt-3" %>
</p>
