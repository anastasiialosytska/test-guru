<h2 class="mt-3 text-center border border-primary rounded-pill">Управление наградами</h2>

<p>
  <%= link_to 'Создать новую награду', new_admin_badge_path, type: 'button', class: "btn btn-outline-secondary mt-3" %>
</p>

<div class="container mt-5">
  <table class="table table-hover caption-top">
    <caption>Все награды</caption>
    <% @badges.each do |badge| %>
      <tr>
        <td valign="middle"><%= badge.title %></td>
        <td><%= image_tag("reward.jpg", size: "100x100") %></td>
      </tr>
    <% end %>
  </table>
</div>

<p>
  <%= link_to t('.back'), admin_tests_path, type: 'button', class: "btn btn-outline-secondary mt-3" %>
</p>
