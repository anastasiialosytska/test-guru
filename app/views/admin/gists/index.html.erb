<div class="container mt-5">
  <table class="table table-hover caption-top">
    <caption><%= t('.header') %></caption>
    <tr class="fw-bold">
      <td><%= t('.number') %></td>
      <td><%= t('.question') %></td>
      <td>Gist URL</td>
      <td><%= t('.user') %></td>
    </tr>
    <% @gists.each do |gist| %>
      <tr>
        <td><%= gist.id %></td>
        <td><%= link_to gist.question.body.truncate(25), admin_question_path(gist.question), class: "link-dark" %></td>
        <td><%= link_to gist.github_id, "https://gist.github.com/anastasiialosytska/#{gist.github_id}",class: "link-dark", target: :blank %></td>
        <td><%= gist.user.email %></td>
      </tr>
    <% end %>
  </table>
</div>

<p>
  <%= link_to t('.back'), admin_tests_path, type: 'button', class: "btn btn-outline-secondary mt-3" %>
</p>
