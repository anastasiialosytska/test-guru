<div class="row justify-content-center mt-3">
  <div class="col col-lg-5">
    <div class="card border-secondary">
      <div class="card-body">
        <%= form_with  model: [:admin, @question, @answer], local: true do |form| %>
          <div class="form-group">
            <p>
              <%= form.label :body %>
              <%= form.text_area :body, id: :answer_body, rows: 7, cols: 60, class: 'form-control' %>
            </p>

            <div class="form-check">
              <%= form.label :correct, class: 'form-check-label' do %>
                <%= form.check_box :correct, id: :answer_correct, class: 'form-check-input' %>
                <%= t('.correct') %>
              <% end %>            
            </div>

            <p class="text-center"><%= form.submit class: 'btn btn-primary mt-2' %></p>
          </div>
        <% end %>
        <p><%= link_to t('.back'), admin_question_path(@answer.question), class: 'btn btn-outline-secondary mt-3' %></p>
      </div>
    </div>
  </div>
</div>

