<h2 class="mt-3 text-center border border-primary rounded-pill"><%= t('.header') %></h2>

<table class="table table-hover">
  <tr class="fw-bold">
    <td><%= t('.title') %></td>
    <td><%= t('.category') %></td>
    <td><%= t('.level') %></td>
    <td><%= t('.quantity_of_questions') %></td>
    <td><%= t('.action') %></td>
  </tr>

  <% @tests.each do |test| %>
    <tr>
      <td><%= test.title %></td>
      <td><%= test.category %></td>
      <td><%= test.level %></td>
      <td><%= test.questions.count %></td>
      <td><%= button_to t('.start'), start_test_path(test), class: 'btn btn-outline-secondary' %></td>
    </tr>
  <% end %>
</table>
